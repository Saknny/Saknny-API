{{> header headerImage="assets/images/Group.png"}}
<mj-column background-color="white" width="94%" padding-top="10px" border-radius="0px">
        <mj-text font-size="22px" font-weight="530" line-height="25px" color="#003D25">
          Password Reset Request for Your Donatella Account
</mj-text>
      </mj-column>
      
    <mj-column background-color='white' width='94%' padding='0 0 10 0'>
      {{#if data.firstName}}
        <mj-text font-weight='350'>Dear {{data.firstName}},</mj-text>
      {{/if}}
    </mj-column>

      <mj-column background-color="white" width="94%" >
        <mj-column background-color="#F5F5F5" width="90%" padding-left="30px" border-radius="12px">
          <mj-text padding="20px 10px 0 0" font-size="14px" letter-spacing="0px" line-height="17px">
          
For security purposes, this link will expire in 60 minutes. If the link expires, you will need to request a new password reset.
                       <br/>
            <br/>
            </mj-text>
          <mj-group width="350px" padding="0 0 20px 0">
            <mj-column background-color="#E6ECE9" border-radius="8px" width="40px" padding="0" 
             css-class="input"> 
              <mj-text font-size="17px" padding="11px 0 0 0" height="25px" align="center">{{data.verificationCode.[0]}}</mj-text>
          </mj-column>
            
                   <mj-column background-color="#E6ECE9" border-radius="8px" width="40px" 
             css-class="input"> 
              <mj-text font-size="17px" padding="11px 0 0 0" height="25px" align="center">{{data.verificationCode.[1]}}</mj-text>
          </mj-column>
            <mj-column background-color="#E6ECE9" border-radius="8px" width="40px" 
             css-class="input"> 
              <mj-text font-size="17px" padding="11px 0 0 0" height="25px" align="center">{{data.verificationCode.[2]}}</mj-text>
          </mj-column>
            <mj-column background-color="#E6ECE9" border-radius="8px" width="40px" 
             css-class="input"> 
              <mj-text font-size="17px" padding="11px 0 0 0" height="25px" align="center">{{data.verificationCode.[3]}}</mj-text>
          </mj-column>
            </mj-group>
        </mj-column>
        <mj-column padding="10px 0 10px 0" width='550px'>
     <mj-text line-height='20px'>
      If you did not request a password reset, please contact us immediately at.<a style="color:var(--Black, #00A1FF);">support@caterk.com</a></mj-text>
        </mj-text>
           <mj-text>
            Best regards,
            <br/>
            <br/>
           The Donatella Team
          </mj-text>
        </mj-column>
      </mj-column>
{{> footer}}